<div class="ui middle aligned center aligned grid">
  <div class="column" style="max-width: 450px; margin-top: 50px">
    <h1>Forgot your password?</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
        <div class="ui large form">
          <div class="ui stacked segment">
            <div class="field">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email you signed uo with' %>
            </div>
            <div class="actions">
              <%= f.submit 'Send me reset password instructions', class:'ui fluid large primary button' %>
            </div>
          </div>
        </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>